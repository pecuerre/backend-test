<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class=row>
    <div class="col-md-8">
      <%= f.text_field :title, :placeholder => 'Title of the Event',
        :class => 'col-md-12' %> <br> <br>
      <%= f.text_area :description, :placeholder => 'Description of the event', 
        :class => 'col-md-12', :rows => 10 %> <br> <br>
    </div>

    <div class="col-md-4">
      <%= f.check_box :featured %> Featured Event <br> <br>
      <%= f.text_field :image, :placeholder => 'URL of the image', 
        :class => 'col-md-12' %> <br> <br>
      <%= f.text_field :place, :placeholder => 'Place of the Event',
        :class => 'col-md-12' %> <br> <br>

      <%= f.label :dates %>
      <a class='btn btn-xs btn-primary' id='add-date'>+</a> <br>
      <% f.text_field :dates %>

      <div id="dates">
        <script>
          var old_dates = <%= @event.date_list.inspect.html_safe; %>;
        </script>
      </div>
    </div>
  </div>

  <br>
  <div class="actions well">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
